<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BLOG</title>
    <link
      rel="stylesheet"
      href="/assets/bootstrap-5.0.2-dist/css/bootstrap.css"
    />
    <link rel="stylesheet" href="/assets/main.css">
   
    <link rel="stylesheet" href="/assets/font-awesome.min.css">
   

  </head>
  <body>
    <div class="navigation nav-bar nav" style="position: fixed;">
      <nav class="nav-bar">
        <h1 class="text-light heading">
          <div class="header d-grid">
            <h1 class="header-text text-light">
             Blog
            </h1>
          </div>
        </h1>
      </nav>
    </div>

    <!-- A card for a blog post -->
    <div class="container">
      <% data.forEach(datum =>{%>
      <div class="row d-grid">
        <div class="col-sm-10 col-md-8 col-lg-6 m-auto">
          <div class="card p-3 mt-5">
            <div class="header d-grid">
              <div class="card-header">
                <%= datum.Date %>
              </div>
            </div>
            <div class="mt-5">
              <img src="<%= datum.image%>" class="card-img-top" alt="..." />
              <div class="card-body">
                <p class="card-text" style="font-family: sans-serif; text-decoration-skip-ink: unset;">
                  <%= datum.text%>
                  
              </div>
            </div>
            <div class="d-flex justify-content-end">
              <a class="btn fa fa-heart liked" style="color: red; overflow: hidden; font-size: 30px;"></a>
              <a class="btn fa fa-comment"     style="color: blue; overflow: hidden; font-size: 30px;"></a>

            </div>
          </div>
        </div>
      </div>
      <% })%>
    </div>
  </body>
</html>
